<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/add" method="POST">
            <div class="form-group mb-3">
              <input type="text" name="title" class="form-control" placeholder="Title" required autofocus>
            </div>
            <div class="form-group mb-3">
              <input type="url" name="url" class="form-control" placeholder="Url" required>
            </div>
            <div class="form-group mb-3">
              <textarea name="description" rows="2" class="form-control" placeholder="Description" required></textarea>
            </div>
            <div class="d-grid gap-2 mx-auto">
              <button class="btn btn-success btn-lg">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
